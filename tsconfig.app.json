{
  "compilerOptions": {
    // Настройки компилятора TypeScript для приложения
    "target": "ES2020",                // Целевая версия ECMAScript
    "useDefineForClassFields": true,   // Использование define для полей классов
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Подключаемые библиотеки
    "module": "ESNext",                // Система модулей
    "skipLibCheck": true,              // Пропуск проверки библиотек

    // Настройки для бандлера
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    // Настройки проверки кода
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]  // Включаемые файлы
}